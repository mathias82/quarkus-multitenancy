{
  "info": {
    "name": "Quarkus Multitenancy Demo",
    "description": "Postman collection for testing multi-tenant Quarkus demo with PostgreSQL and HTTP strategy",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Current Tenant (tenant1)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "X-Tenant", "value": "tenant1", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/users/tenant",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "tenant"]
        }
      }
    },
    {
